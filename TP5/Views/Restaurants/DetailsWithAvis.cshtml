@model RestoManager_YourName.Models.RestosModel.Restaurant

@{
    ViewData["Title"] = "Détails et Avis";
}

<h2>@Model.NomResto</h2>
<p><strong>Spécialité:</strong> @Model.Specialite</p>
<p><strong>Ville:</strong> @Model.Ville</p>
<p><strong>Téléphone:</strong> @Model.Tel</p>

<hr />
<h3>Avis</h3>

@if (Model.LesAvis != null && Model.LesAvis.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Note</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var avis in Model.LesAvis)
            {
                <tr>
                    <td>@avis.NomPersonne</td>
                    <td>@avis.Note</td>
                    <td>@avis.Commentaire</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucun avis disponible pour ce restaurant.</p>
}