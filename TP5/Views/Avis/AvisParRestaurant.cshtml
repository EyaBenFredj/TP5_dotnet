@model IEnumerable<RestoManager_YourName.Models.RestosModel.Avis>

@{
    ViewData["Title"] = "Avis du Restaurant";
}

<h2>Avis pour le restaurant : @ViewBag.Restaurant</h2>

@if (!Model.Any())
{
    <p>Aucun avis trouvé.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Note</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomPersonne</td>
                    <td>@item.Note</td>
                    <td>@item.Commentaire</td>
                </tr>
            }
        </tbody>
    </table>
}